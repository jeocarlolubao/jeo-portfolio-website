---
// For XP
import "xp.css/dist/XP.css"

import Head from "../components/astro-components/Head.astro";

// astro components
import Navbar from "../components/astro-components/Navbar.astro";
import Footer from "../components/astro-components/Footer.astro";
// windows xp components
import IntroXP from "../components/astro-components/xp/IntroXP.astro";
import AboutMeXP from "../components/astro-components/xp/AboutMeXP.astro";
import TechStackXP from "../components/astro-components/xp/TechStackXP.astro";
import ExperienceXP from "../components/astro-components/xp/ExperienceXP.astro";
import EducationXP from "../components/astro-components/xp/EducationXP.astro";
import ProjectsXP from "../components/astro-components/xp/ProjectsXP.astro";
import AwardsXP from "../components/astro-components/xp/AwardsXP.astro";
import ConferencesXP from "../components/astro-components/xp/ConferencesXP.astro";
import CertificationsXP from "../components/astro-components/xp/CertificationsXP.astro";

// svelte modern components

import Intro from "../components/svelte-components/Intro.svelte";
import About from "../components/svelte-components/About.svelte";
import Stack from "../components/svelte-components/Stack.svelte";
import Experience from "../components/svelte-components/Experience.svelte";
import Education from "../components/svelte-components/Education.svelte";
import Projects from "../components/svelte-components/Projects.svelte";
import Awards from "../components/svelte-components/Awards.svelte";
---

<html lang="en">
	<!-- Head tag + meta tags -->
	<head>
		<Head /> 
	</head>

	<body class="surface" ontouchstart="">
		<Navbar/>
		<section class="">
			<div id="particles-js" class="absolute inset-0 z-[-1]"></div>
			<Intro />
			<About />
			<Stack />
			<Experience />
			<Education />
			<Projects />
			<Awards />
			<Footer/>
		</section>
		
		     Particle.js initialization script 
			<script is:inline>
				particlesJS.load("particles-js", "/portfolio/particles.json", function () {
				  console.log("callback - particles.js config loaded");
				});
			</script>
			<aside>
				<ul class="tree-view">
				  <li><a href="#intro">Jeooooooooo</a></li>
				  <li>
					<li>
						<a href="#about-me">
							About Me
						</a>
					</li>
					<ul>
						<li>
							<a href="#tech-stack">
								Tech Stack
							</a>
						</li>
						<li>
							<a href="#experience">
								Experience
							</a>
						</li>
						<li>
							<a href="#education">
								Education
							</a>
						</li>
						<li>
							<a href="#projects">
								Projects
							</a>
						</li>
						<li>
							<a href="#awards">
								Awards
							</a>
						</li>
						<li>
							<a href="#conferences">
								Conferences Attended
							</a>
						</li>
						<li>
							<a href="#certifications">
								Certifications
							</a>
						</li>
					</ul>
				  </li>
				  <li><a href="#upgrade">✨Upgrade✨</a></li>
				</ul>
			</aside>
			<main>
				<IntroXP id='intro'/>
				<AboutMeXP id='about-me' />
				<TechStackXP id='tech-stack'/>
				<ExperienceXP id='experience'/>
				<EducationXP id='education'/>
				<ProjectsXP id='projects'/>
				<AwardsXP id='awards'/>
				<ConferencesXP id='conferences'/>
				<CertificationsXP id='conferences'/>
			</main>
	</body>


</html>

<style>
	#particles-js canvas {
		  display: block;
		  /* vertical-align: bottom; */
		  -webkit-transform: scale(1);
		  -ms-transform: scale(1);
		  transform: scale(1);
		  opacity: 1;
		  -webkit-transition: opacity .8s ease, -webkit-transform 1.4s ease;
		  transition: opacity .8s ease, transform 1.4s ease
	}

	#particles-js {
		width: 100%;
		height: 100%;
		position: fixed;
		z-index: -10;
		top: 0;
		left: 0
	}
	aside {  
		width: 200px;  
		position: fixed;  
		top: 0;  
		bottom: 0;  
		padding: 8px;  
		display: flex;  
		align-items: stretch; 
	}
	main {
		width: 65rem;
		margin-left: 240px;
		margin-bottom: 60px;
	}
	body {
		font-family: "Arial";
		font-size: 12px;
		color: #222;
	}
</style>